@*
    This is the "Edit Category" Page.
    Here the Admin user can edit categories for the blog posts to use.
*@
@* This binds the data Model to the page View *@
@model Admin.Models.ViewModels.EditCategoryRequest
@{
}

@* This Div holds the Categories section. *@
<div id="categories" class="container text-left">
    @* This row is for the Categories label. *@
    <div class="row">
        <div id="editCategoryPageLabel" class="col-8">
            <h1>Edit Category</h1>
        </div>
    </div>
    @if (Model != null)
    {
        @* This form is for editing a Title in the Category db. *@
        <form method="post">
            <div class="row">
                @* This is the label prompting for the Category Title. *@
                <div class="col-auto">
                    <label id="editCategoryTitleLabel" for="editCategoryTitleInput" class="col-form-label">Title</label>
                </div>
                @* This is the text input to capture the user's Title. *@
                <div class="col-auto">
                    <input type="text" id="editCategoryTitleInput" asp-for="Title" class="form-control" autofocus />
                </div>
            </div>
            @* This is the Save button. *@
            <div class="row pt-3">
                <div id="categoryEditSave">
                    <button id="categoryEditSaveButton" type="submit" class="btn btn-primary align-middle">Save</button>
                </div>
            </div>
        </form>
    }
    else
    {
        <p> Category not found.</p>
    }
</div>

